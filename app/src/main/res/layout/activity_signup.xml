<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E9FBFB"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="29dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_signup"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="129dp"
                android:src="@drawable/ic_baseline_edit_note_24" />

            <RelativeLayout
                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_alignParentTop="@id/icon_signup"
                android:layout_marginTop="150dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/text_sign_up"
                            android:layout_width="321dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center_horizontal"
                            android:text="Sign up"
                            android:textColor="@color/black"
                            android:textSize="30dp" />
                        <TextView
                            android:id="@+id/title_name"
                            android:layout_width="321dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/text_sign_up"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="20dp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/signup_name"
                            android:layout_width="341dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_name"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:inputType="textPersonName"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/title_text"
                            android:layout_width="321dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/signup_name"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="20dp"
                            android:text="Username"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/signup_username"
                            android:layout_width="341dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_text"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:inputType="textPersonName"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/title_text1"
                            android:layout_width="321dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/signup_username"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="20dp"
                            android:text="Password"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/signup_pass"
                            android:layout_width="341dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_text1"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:inputType="textPassword"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/title_text3"
                            android:layout_width="321dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/signup_pass"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="20dp"

                            android:text="Confirm Password"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/signup_pass1"
                            android:layout_width="341dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_text3"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:inputType="textPassword"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_rounded_button"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:cardCornerRadius="10dp"
                tools:ignore="NotSibling"></Button>
        </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>